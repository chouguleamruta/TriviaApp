<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/default_padding_activity"
    android:layout_marginBottom="@dimen/default_padding_activity"
    android:layout_marginLeft="@dimen/default_padding_activity"
    android:layout_marginRight="@dimen/default_padding_activity"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRowTime"
        android:padding="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRowName"
        android:padding="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textSize="20sp"
        android:layout_below="@+id/txtRowTime"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:padding="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/txtRowQue"
        android:textSize="16sp"
        android:layout_below="@+id/txtRowName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:padding="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/txtRowAnswer"
        android:layout_below="@+id/txtRowQue"
        android:textSize="16sp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:padding="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/txtRowQue1"
        android:layout_below="@+id/txtRowAnswer"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:padding="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/txtRowAns1"
        android:textSize="16sp"
        />


</LinearLayout>