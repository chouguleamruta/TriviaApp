<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/default_padding_activity"
    android:layout_marginBottom="@dimen/default_padding_activity"
    android:layout_marginLeft="@dimen/default_padding_activity"
    android:layout_marginRight="@dimen/default_padding_activity"
    android:orientation="vertical"
    android:gravity="center|center_horizontal"
    tools:context=".View.MainActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        app:contentPaddingTop="20dp"
        android:layout_height="220dp">

    <TextView
        android:text="@string/str_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textViewName"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter Name"
        android:gravity="center_vertical|center" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/str_next"

         />
    </android.support.v7.widget.CardView>
</LinearLayout>